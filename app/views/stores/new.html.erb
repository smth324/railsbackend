<%= form_with model: @store do |form| %>
  <div>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
    <% @store.errors.full_messages_for(:name).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :user_id %><br>
    <%= form.text_area :user_id %><br>
    <% @store.errors.full_messages_for(:user_id).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>